<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <HediffDef>
    <defName>USH_InnerOrgansWeakening</defName>
    <label>inner organs weakening</label>
    <description>Aggressive mechanites are slowly destroying all of the victim's inner organs. In the last stage, their brain becomes spongy and begins generating overwhelming amounts of dopamine, adrenaline and a natural hallucinogenic.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.7, 1.0, 0.7)</defaultLabelColor>
    <initialSeverity>0.01</initialSeverity>
    <minSeverity>0.01</minSeverity>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>false</makesSickThought>
    <priceOffset>-0.5</priceOffset>
    <tendable>false</tendable>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>0.125</severityPerDay>
      </li>
      <li Class="LuciferiumExpansion.HediffCompProperties_DestroyBrainOnDeath"></li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
        <painOffset>0.02</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.20</minSeverity>
        <painOffset>0.1</painOffset>
        <capMods>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>moderate</label>
        <minSeverity>0.40</minSeverity>
        <vomitMtbDays>5</vomitMtbDays>
        <painOffset>0.25</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.05</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.60</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <painOffset>0.6</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
        <hediffGivers>
        </hediffGivers>
      </li>
      <li>
        <label>revelation</label>
        <minSeverity>0.70</minSeverity>
        <painOffset>0.75</painOffset>
        <painFactor>0.1</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.25</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.30</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>1.00</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>0.40</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.30</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>0.10</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>meltdown</label>
        <minSeverity>0.97</minSeverity>
        <painFactor>1.6</painFactor>
        <painOffset>0.8</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.45</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.30</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.70</offset>
          </li>
          <li>
            <capacity>BloodFiltration</capacity>
            <offset>-0.70</offset>
          </li>
          <li>
            <capacity>BloodPumping</capacity>
            <offset>-0.40</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.60</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.50</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>USH_UnstableMechanites</defName>
    <label>overclocked mechanites</label>
    <description>Chaotic and uncontrollable mechanites that further enhance bodily functions.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1,1,0.5)</defaultLabelColor>
    <initialSeverity>1</initialSeverity>
    <makesSickThought>false</makesSickThought>
    <everCurableByItem>false</everCurableByItem>
    <scenarioCanAdd>false</scenarioCanAdd>

    <stages>
      <li>
        <label>active</label>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>0.15</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>0.20</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>0.20</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef>
    <defName>USH_ScarletComa</defName>
    <label>scarlet coma</label>
    <labelNoun>a scarlet coma</labelNoun>
    <description>Shock effects due to over-concentration of scarlet mechanites in the bloodstream.</description>
    <hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 0.2, 0.2)</defaultLabelColor>
    <lethalSeverity>10</lethalSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
        <showHoursToRecover>true</showHoursToRecover>
      </li>
      <li Class="HediffCompProperties_Discoverable">
        <sendLetterWhenDiscovered>true</sendLetterWhenDiscovered>
        <discoverLetterLabel>Resurrection: {0}</discoverLetterLabel>
        <discoverLetterText>{0} has been resurreced.</discoverLetterText>
        <messageType>PositiveEvent</messageType>
        <letterType>PositiveEvent</letterType>
      </li>
    </comps>
    <stages>
      <li>
        <painOffset>0.2</painOffset>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>

  <HediffDef ParentName="DrugToleranceBase">
    <defName>USH_LuciferiumTolerance</defName>
    <label>scarlet mechanites tolerance</label>
    <description>A built-up tolerance to all scarlet mechanites based substances.</description>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.015</severityPerDay>
      </li>
      <li Class="HediffCompProperties_DrugEffectFactor">
        <chemical>Luciferium</chemical>
      </li>
    </comps>
  </HediffDef>

</Defs>